<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="kr.co.bigwalk.app.sign_in.organization.OrganizationViewModel" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/corporate_form_back_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/back_image"
            android:onClick="@{() -> viewModel.finishActivity()}"
            android:src="@drawable/back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/TitleBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/input_organization_member_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@+id/corporate_form_back_image"
            app:layout_constraintBottom_toTopOf="@+id/organization_form_footer">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/organization_title_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/organization_requirements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/organization_form_organization"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="50dp"
                        android:onClick="@{() -> viewModel.showOrganizations()}">

                        <TextView
                            android:id="@+id/organization"
                            style="@style/SubTitleBlackRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/please_select_corporate"
                            android:padding="16dp"
                            android:text="@{viewModel.organization.name}"
                            android:textColorHint="@color/black"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/very_light_pink"
                            app:layout_constraintTop_toBottomOf="@+id/organization" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/organization_form_department"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:onClick="@{() -> viewModel.showSubDepartments1()}"
                        android:visibility="@{viewModel.canChooseDepth1Department ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="@+id/organization_form_organization">

                        <TextView
                            android:id="@+id/department"
                            style="@style/SubTitleBlackRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@{viewModel.depth1type}"
                            android:padding="16dp"
                            android:text="@{viewModel.subDepartment1.name}"
                            android:textColorHint="@color/black"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/very_light_pink"
                            app:layout_constraintTop_toBottomOf="@+id/department" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/organization_form_department_sub1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:onClick="@{() -> viewModel.showSubDepartments2()}"
                        android:visibility="@{viewModel.canChooseDepth2Department ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="@+id/organization_form_department">

                        <TextView
                            android:id="@+id/department_sub1"
                            style="@style/SubTitleBlackRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@{viewModel.depth2type}"
                            android:padding="16dp"
                            android:text="@{viewModel.subDepartment2.name}"
                            android:textColorHint="@color/black"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/very_light_pink"
                            app:layout_constraintTop_toBottomOf="@+id/department_sub1" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/organization_form_department_sub2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:onClick="@{() -> viewModel.showSubDepartments3()}"
                        android:visibility="@{viewModel.canChooseDepth3Department ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="@+id/organization_form_department_sub1">

                        <TextView
                            android:id="@+id/department_sub2"
                            style="@style/SubTitleBlackRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@{viewModel.depth3type}"
                            android:padding="16dp"
                            android:text="@{viewModel.subDepartment3.name}"
                            android:textColorHint="@color/black"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/very_light_pink"
                            app:layout_constraintTop_toBottomOf="@+id/department_sub2" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/organization_form_department_sub3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:onClick="@{() -> viewModel.showSubDepartments4()}"
                        android:visibility="@{viewModel.canChooseDepth4Department ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="@+id/organization_form_department_sub2">

                        <TextView
                            android:id="@+id/department_sub3"
                            style="@style/SubTitleBlackRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@{viewModel.depth4type}"
                            android:padding="16dp"
                            android:text="@{viewModel.subDepartment4.name}"
                            android:textColorHint="@color/black"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/very_light_pink"
                            app:layout_constraintTop_toBottomOf="@+id/department_sub3" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/organization_form_search_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="@{viewModel.organizationRequirement.isSearchContent ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="@+id/organization_form_department_sub3">

                        <TextView
                            android:id="@+id/search_value"
                            style="@style/SubTitleBlackRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{() -> viewModel.showKeyword()}"
                            android:hint="@string/please_input_search_value"
                            android:padding="16dp"
                            android:text="@={viewModel.searchValue}"
                            android:textColorHint="@color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="Autofill" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/very_light_pink"
                            app:layout_constraintTop_toBottomOf="@+id/search_value" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/organization_form_visit_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="@{viewModel.organizationRequirement.isVisitDay ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="@+id/organization_form_search_value">

                        <TextView
                            android:id="@+id/visit_date"
                            style="@style/SubTitleBlackRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{() -> viewModel.showDatePicker()}"
                            android:hint="@string/please_input_visit_date"
                            android:padding="16dp"
                            android:text="@{viewModel.visitdate}"
                            android:textColorHint="@color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="Autofill" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/very_light_pink"
                            app:layout_constraintTop_toBottomOf="@+id/visit_date" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/organization_form_family"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="@{viewModel.organizationRequirement.isFamilyRelations ? View.VISIBLE : View.GONE}"
