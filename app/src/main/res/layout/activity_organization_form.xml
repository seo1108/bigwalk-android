                        <EditText
                            android:id="@+id/family"
                            style="@style/SubTitleBlackRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/please_input_family"
                            android:inputType="text"
                            android:padding="16dp"
                            android:text="@={viewModel.familyRelation}"
                            android:textColorHint="@color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="Autofill,TextFields" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/very_light_pink"
                            app:layout_constraintTop_toBottomOf="@+id/family" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/organization_form_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="@{viewModel.organizationRequirement.isAge ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="@+id/organization_form_family">

                        <EditText
                            android:id="@+id/age"
                            style="@style/SubTitleBlackRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/please_input_age"
                            android:inputType="number"
                            android:padding="16dp"
                            android:text="@={viewModel.age}"
                            android:textColorHint="@color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="Autofill,TextFields" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/very_light_pink"
                            app:layout_constraintTop_toBottomOf="@+id/age" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/organization_form_employee_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="@{viewModel.organizationRequirement.isNickname ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="@+id/organization_form_age">

                        <EditText
                            android:id="@+id/employee_nickname"
                            style="@style/SubTitleBlackRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/please_input_employee_nickname"
                            android:inputType="text"
                            android:padding="16dp"
                            android:text="@={viewModel.nickname}"
                            android:textColorHint="@color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="Autofill,TextFields" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/very_light_pink"
                            app:layout_constraintTop_toBottomOf="@+id/employee_nickname" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/organization_form_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="@{viewModel.organizationRequirement.isNumber ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="@+id/organization_form_employee_nickname">

                        <EditText
                            android:id="@+id/number"
                            style="@style/SubTitleBlackRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="number"
                            android:hint="@string/please_input_number"
                            android:padding="16dp"
                            android:text="@={viewModel.number}"
                            android:textColorHint="@color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="Autofill" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/very_light_pink"
                            app:layout_constraintTop_toBottomOf="@+id/number" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/organization_form_employee_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="@{viewModel.organizationRequirement.isOrganizationEmployeeNumber ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="@+id/organization_form_number">

                        <EditText
                            android:id="@+id/employee_number"
                            style="@style/SubTitleBlackRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/please_input_employee_number"
                            android:inputType="text"
                            android:padding="16dp"
                            android:text="@={viewModel.organizationEmployeeNumber}"
                            android:textColorHint="@color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="Autofill,TextFields" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/very_light_pink"
                            app:layout_constraintTop_toBottomOf="@+id/employee_number" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/organization_form_employee_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="@{viewModel.organizationRequirement.isIdentification ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="@+id/organization_form_employee_number">

                        <EditText
                            android:id="@+id/employee_id"
                            style="@style/SubTitleBlackRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/please_input_employee_id"
                            android:inputType="text"
                            android:padding="16dp"
                            android:text="@={viewModel.id}"
                            android:textColorHint="@color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="Autofill,TextFields" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/very_light_pink"
                            app:layout_constraintTop_toBottomOf="@+id/employee_id" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/organization_form_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="@{viewModel.organizationRequirement.isName ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="@+id/organization_form_employee_id">

                        <EditText
                            android:id="@+id/name"
                            style="@style/SubTitleBlackRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/please_input_name"
                            android:inputType="text"
                            android:padding="16dp"
                            android:text="@={viewModel.name}"
                            android:textColorHint="@color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="Autofill,TextFields" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/very_light_pink"
                            app:layout_constraintTop_toBottomOf="@+id/name" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/organization_form_employee_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="@{viewModel.organizationRequirement.isOrganizationEmail ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="@+id/organization_form_name">

                        <EditText
                            android:id="@+id/employee_email"
                            style="@style/SubTitleBlackRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/please_input_employee_email"
                            android:padding="16dp"
                            android:text="@={viewModel.organizationEmail}"
                            android:textColorHint="@color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="Autofill" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/very_light_pink"
                            app:layout_constraintTop_toBottomOf="@+id/employee_email" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/organization_form_insta_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="@{viewModel.organizationRequirement.isInstagramAccount ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="@+id/organization_form_employee_email">

                        <EditText
                            android:id="@+id/insta_account"
                            style="@style/SubTitleBlackRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/please_input_insta_account"
                            android:inputType="text"
                            android:padding="16dp"
                            android:text="@={viewModel.instaAccount}"
                            android:textColorHint="@color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="Autofill,TextFields" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/very_light_pink"
                            app:layout_constraintTop_toBottomOf="@+id/insta_account" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/organization_form_input_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="@{viewModel.organizationRequirement.isInput ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="@+id/organization_form_insta_account">

                        <EditText
                            android:id="@+id/input_value"
                            style="@style/SubTitleBlackRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="text"
                            android:hint="@string/please_input_input_value"
                            android:padding="16dp"
                            android:text="@={viewModel.inputValue}"
                            android:textColorHint="@color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="Autofill" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/very_light_pink"
                            app:layout_constraintTop_toBottomOf="@+id/input_value" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/organization_form_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="@{viewModel.organizationRequirement.isAddress ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="@+id/organization_form_input_value">

                        <EditText
                            android:id="@+id/address"
                            style="@style/SubTitleBlackRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/please_input_address"
                            android:inputType="text"
                            android:padding="16dp"
                            android:text="@={viewModel.address}"
                            android:textColorHint="@color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="Autofill,TextFields" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/very_light_pink"
                            app:layout_constraintTop_toBottomOf="@+id/address" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/organization_form_join_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="@{viewModel.organizationRequirement.isAttendanceNo ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="@+id/organization_form_address">

                        <EditText
                            android:id="@+id/join_number"
                            style="@style/SubTitleBlackRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/please_input_join_number"
                            android:inputType="number"
                            android:padding="16dp"
                            android:text="@={viewModel.joinNumber}"
                            android:textColorHint="@color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="Autofill,TextFields" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/very_light_pink"
                            app:layout_constraintTop_toBottomOf="@+id/join_number" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/organization_form_student_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="@{viewModel.organizationRequirement.isStudentId ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="@+id/organization_form_join_number">

                        <EditText
                            android:id="@+id/student_id"
                            style="@style/SubTitleBlackRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/please_input_student_id"
                            android:inputType="text"
                            android:padding="16dp"
                            android:text="@={viewModel.studentId}"
                            android:textColorHint="@color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="Autofill,TextFields" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/very_light_pink"
